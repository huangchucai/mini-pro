/* components/book/index.wxss */
.container {
    width: 240rpx;
    height: 360rpx;
    position: relative;
    box-shadow:2px 2px 3px #e3e3e3;
}
.container-bg {
    width: 100%;
    height: 100%;
    border-radius: 2%
}
.ellipsis {
    text-overflow:ellipsis;
    word-wrap:nowrap;
    white-space:nowrap;
    overflow:hidden;

}
.describe {
    position: absolute;
    bottom: 0;
    padding:5rpx 10rpx 8rpx 15rpx;
    width: 100%;
    box-sizing: border-box;
    background: #fff;
    font-size: 20rpx;
    border-bottom-right-radius:2px;
    border-bottom-left-radius:2px;
    display: flex;
    flex-direction: column;
}
.describe .title {
    margin-top: 10rpx;
    font-size: 24rpx;
    text-overflow: ellipsis;
}
.describe .author {
    color: #999999;
}
.describe .likeCount {
    color: #666666;
    align-self: flex-end;
}
