.index_container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.tag {
    width: 46rpx;
    height: 142rpx;
    position: relative;
    bottom: 160rpx;
    right: 310rpx;
}

.classic-text {
    max-width: 550rpx;
    font-size: 36rpx;
    display: block;
    margin-top: -90rpx;
}

.player-img {
    width: 120rpx;
    height: 120rpx;
    position: relative;
    bottom: 271rpx;
}

.play-animation {
    transform: rotate(360deg);
    -webkit-transform: rotate(360deg);
    animation: rotate 10s linear infinite;
    -webkit-animation: rotate 10s linear infinite;
}

.classic-bg-img {
    width: 422rpx;
    height: 422rpx;
    margin-top: 60rpx;
    /* margin-bottom: 120rpx; */
    border-radius: 70%;
    /* margin-bottom: -50px; */
    overflow: hidden;
}

@keyframes rotate {
    from {
        transform: rotate(0deg)
    }

    to {
        transform: rotate(360deg)
    }
}

@-webkit-keyframes rotate {
    from {
        -webkit-transform: rotate(0deg);
    }

    to {
        -webkit-transform: rotate(360deg);
    }
}