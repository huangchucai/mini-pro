<wxs src="../../utils/filter.wxs" module="util"></wxs>
<view class="container">
    <view class="head">
        <image src="{{book.image}}"></image>
        <text class='title'>{{book.title}}</text>
        <text class='author'>{{book.author}}</text>
    </view>
    <view class="sub-container">
        <text class="headline">短评</text>
        <text class="shadow" wx:if="{{noComment}}">还没有短评</text>
        <view class="comment-container">
            <block wx:for="{{util.slice(comments,8)}}" wx:key="">
                <v-tag class="tag" text="{{item.content}}" bg-color="{{util.changeColor(index)}}">
                    <text class="num">{{'+' + item.nums}}</text>
                </v-tag>
            </block>
        </view>
    </view>
    <view class="sub-container">
        <text class="headline">内容简介</text>
        <text class="content" decode="{{true}}">{{util.filter(book.summary)}}</text>
    </view>
    <view class="sub-container">
        <text class="headline">书本信息</text>
        <view class="detail-contaner">
            <view class="vertical">
                <text class="description">出版社</text>
                <text class="description">出版年</text>
                <text class="description">页数</text>
                <text class="description">定价</text>
                <text class="description">装帧</text>
            </view>
            <view class="vertical">
                <text class="">{{book.publisher}}</text>
                <text class="">{{book.pubdate}}</text>
                <text class="">{{book.pages}}</text>
                <text class="">{{book.price}}</text>
                <text class="">{{book.binding}}</text>
            </view>

        </view>
    </view>
</view>

<view class="post-container" wx:if="{{!isShowPost}}">
    <view class="post-fake" bind:tap="showPost">
        <text>输入短评</text>
    </view>
    <view class="like-container">
        <v-like bind:like="onLike" class="like" isLike="{{!!count.like_status}}" count="{{count.fav_nums}}" />
    </view>
</view>
<block wx:if="{{isShowPost}}">
    <v-mark bind:hidePost="onCancel"></v-mark>
    <view class="posting-container">
        <view class="post-header">
            <text wx:if="{{!noComment}}">仅可点击标签+1</text>
            <text wx:else>暂无短评</text>
            <text class="cancel" bind:tap="onCancel">取消</text>
        </view>
        <view class="comment-container">
            <block wx:for="{{util.slice(comments,3)}}" wx:key="">
                <v-tag class="tag" text="{{item.content}}" bg-color="{{util.changeColor(index)}}" bind:onTaping="onPost">
                    <text class="num">{{'+' + item.nums}}</text>
                </v-tag>
            </block>
        </view>
        <input focus="{{isShowPost}}" confirm-type="发送" class="post" placeholder='短评最多12个字' bindconfirm="onPost"></input>
    </view>
</block>
